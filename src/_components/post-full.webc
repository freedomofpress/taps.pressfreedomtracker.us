<div @raw="preact(
    './src/preact/components/post-full.js',
    { post: post, horizontal: horizontal }
)"></div>

<style>
    .post-full-container {
        container: layout / inline-size;
    }

    .post-full {
        --avatar-size: 60px;
        --padding: var(--line-height-base);
        --metadata-width: 40%;
        margin-bottom: var(--line-height-base);
        border: 1px solid var(--color-border);
        border-radius: 10px;
        display: grid;
        gap: 0 var(--line-height-base);
        overflow: hidden;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.05);
        grid-template-columns: calc(var(--avatar-size) + var(--padding)) minmax(0, 1fr);
        grid-template-areas:
            "avatar   author"
            "avatar   content"
            "metadata metadata";
    }

    .post-metadata {
        grid-area: metadata;
        padding: var(--padding);
        border-top: 1px solid var(--color-border);
        background: var(--color-background-subtle);
    }

    @container (min-width: 720px) {
        .post-full {
            grid-template-columns: calc(var(--avatar-size) + var(--padding)) minmax(0, auto) minmax(var(--metadata-width), var(--metadata-width));
            grid-template-areas:
                "avatar author  metadata"
                "avatar content metadata";
        }

        .post-metadata {
            border-top: none;
            border-left: 1px solid var(--color-border);
        }
    }

    .post-avatar {
        grid-area: avatar;
        width: var(--avatar-size);
        border-radius: 4px;
        margin-top: var(--padding);
        margin-left: var(--padding);
    }

    .post-author {
        grid-area: author;
        padding-top: var(--padding);
        padding-right: var(--padding);
        padding-bottom: calc(0.5 * var(--padding));
    }

    .post-author-name {
        font-weight: bold;
    }

    .post-author-handle {
        color: var(--color-muted);
    }

    .post-body {
        grid-area: content;
        padding-right: var(--padding);
        padding-bottom: var(--padding);
        max-width: 100%;
    }

    .post-content {
        max-width: 100%;
        overflow-x: auto;
    }

    .post-content-long {
        font-size: var(--font-size-base);
    }

    .post-content-medium {
        font-size: calc(1.5 * var(--font-size-base));
    }

    .post-content-short {
        font-size: calc(2 * var(--font-size-base));
    }

    .post-link {
        color: var(--color-muted);
        text-decoration: none;
    }

    /* Metadata Grid Styles */
    .metadata-grid {
        display: grid;
        grid-template-columns: 0.3fr 1fr;
        margin: 0;
        padding: 0;
    }

    .metadata-grid dt {
        grid-column: 1;
        font-weight: bold;
        margin: 0;
        padding: 0;
        margin-bottom: calc(0.5 * var(--line-height-base));
        position: relative;
        padding-right: 0.5em;
    }

    .metadata-grid dd {
        grid-column: 2;
        margin: 0;
        padding: 0;
        margin-bottom: calc(0.5 * var(--line-height-base));
    }

    /* Post Tag Styles */
    .post-tag {
        display: inline-block;
        font-size: 0.8em;
        line-height: calc(var(--line-height-base) - 0.2rem);
        padding: 0 calc(var(--line-height-base) / 4);
        margin-left: 0.4rem;
        margin-bottom: calc(0.25 * var(--line-height-base));
        background: var(--color-pft-yellow-light);
        text-decoration: none;
        color: var(--color-base);
    }

    .post-tag::before {
        content: "#";
        color: var(--color-muted-more);
        margin-right: 0.5ch;
    }

    .post-tag:hover {
        background-color: var(--color-pft-yellow);
    }

    .post-tag-link {
        text-decoration: none;
        color: inherit;
    }

    /* Post Type Styles */
    .post-type {
        display: inline-block;
        font-size: 0.8em;
        line-height: calc(var(--line-height-base) - 0.2rem);
        border: 0.1rem solid var(--color-border);
        padding: 0 calc(var(--line-height-base) / 2);
        margin-left: 0.4rem;
        margin-bottom: calc(0.25 * var(--line-height-base));
        background: var(--color-background);
        border-radius: calc(var(--line-height-base) / 2);
        text-decoration: none;
        color: var(--color-base);
    }

    .post-type:hover {
        background-color: var(--color-background-accent);
    }

    .post-type-link {
        text-decoration: none;
        color: inherit;
    }

    /* Post Media Description Styles */
    .post-media-description {
        background: var(--color-background-accent);
        padding: calc(0.5 * var(--padding)) var(--padding);
        border-radius: 10px;
        border: 1px solid var(--color-border);
        margin-top: var(--padding);
        margin-bottom: 0;
    }

    .post-media-description dt {
        font-weight: bold;
        color: var(--color-muted);
        margin-bottom: calc(0.5 * var(--line-height-base));
    }

    .post-media-description dd {
        margin-left: 0;
    }
</style>
